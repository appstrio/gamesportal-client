doctype html
html(ng-app="myApp")
    head
        meta(charset="utf-8")
        meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
        meta(name='google', content='notranslate')
        title Mojo-Games - Your One-Stop Games Portal
        link(rel="shortcut icon", href="./img/favicon.ico")

        //- bizigames inline install
        //- link(href='https://chrome.google.com/webstore/detail/heplncibihkggagnaaoigdhkgjmmllme', rel='chrome-webstore-item')
        //- mojo-games inline install
        //- link(href='https://chrome.google.com/webstore/detail/fmpeljkajhongibcmcnigfcjcgaopfid', rel='chrome-webstore-item')
        //- gamestab inline install
        //- link(href='https://chrome.google.com/webstore/detail/amlhfkalaoikfbpoolhpdhignhjhlhko', rel='chrome-webstore-item')

        script(src='//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js')
        script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.2.15/angular.min.js')

        script(type='text/ng-template', id='main.html').
            <div masonry="masonryOptions" load-images="false" infinite-scroll="loadMore()" class="masonry-container">
                <div ng-repeat="game in games" ng-class="getGameClass(game, $index)" class="masonry-brick">
                    <a ng-click="runGame(game, $event)">
                        <div ng-if="game.hot" class="badge-overlay hot-overlay">
                            <div class="ribbon-text">Hot</div>
                        </div>
                        <div ng-if="game.premium" class="badge-overlay premium-overlay">
                            <div class="ribbon-text">Premium</div>
                        </div>
                        <img ng-src="{{game.largeThumbnail.url || game.thumbnails[0].url}}" class="game-thumbnail">
                        <div ng-bind="game.name" class="name"></div>
                    </a>
                </div>
            </div>

        script(async, type="text/ng-template", id="searchTypeaheadTemplate.html").
            <a><img ng-src="{{match.model.thumbnails[0].url}}" width="16"><span bind-html-unsafe="match.label | typeaheadHighlight:query"></span></a>

        <!-- inject:js -->
        <!-- endinject -->

        link(href='//fonts.googleapis.com/css?family=Lobster', rel='stylesheet', type='text/css')
        <!-- inject:css -->
        <!-- endinject -->

    body(ng-controller="MainCtrl")
        #fb-root(style="display:none;visibility:hidden;")

        header(ng-cloak, mojo-header, is-small="smallHeader", is-fixed="fixedHeader", ng-style="{ position: fixedHeader ? 'fixed' : 'relative'}")
            include includes/header

        .main(ui-view)
        include includes/modals

        script(src='//connect.facebook.net/en_US/all.js')
        script(async, src='//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-534644e35a88a9ba')
        script.
            var addthis_config = addthis_config || {};
            addthis_config.data_track_addressbar = false;
