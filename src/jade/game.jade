.game-wrapper(ng-show="game.name")
    .game-embed-container
        .main
            .left
                .header
                .more-games-left
                    .game(ng-repeat="game in evenMoreGames | limitTo:5")
                        a(ui-sref="game({gameID: game.id})")
                            img.game-thumbnail(ng-src="{{game.thumbnails[0].url}}")
                            div.name
                                div(ng-bind="game.name")
            .middle
                .header
                    h1.game-name(ng-bind="game.name")
                    .game-rating
                        .rating-box
                            rating.rating-stars(title="{{'Rating: ' + getGameRating(game)}}", value="getGameRating(game)", max="5", readonly="true", state-on="'star-up glyphicon-star'", state-off="'star-down glyphicon-star-empty'")
                            .thumbs-down-container(title="Rate game up", ng-click="rateGame(game, 'down')")
                                .icon.glyphicon.glyphicon-thumbs-down
                            .thumbs-up-container(title="Rate game down", ng-click="rateGame(game, 'up')")
                                .icon.glyphicon.glyphicon-thumbs-up
                    .addthis_toolbox.addthis_default_style(style="float:right;margin-top:12px;")
                        a.addthis_button_facebook_like(fb:like:layout="button_count", addthis:url="https://www.facebook.com/pages/Mojo-Gamescom/452845291514515")
                        //- a.addthis_button_twitter_follow_native(tf:screen_name="DaRealMojoGames", tf:show-screen-name="false", tf:show-count="false")
                        a.addthis_button_google_plusone(g:plusone:href="https://plus.google.com/u/0/105972966277627450580/about", g:plusone:size="medium")
                .embedding
                    script.
                        var hidePreloader = function() {
                            $('#preloader').fadeOut('easeOutBounce', function() {
                                $('.include.preloader').remove();
                                $('object.game').show();
                            });
                        };
                        window.removeAdSwf = function() {
                            hidePreloader();
                        }
                        window.noAdsReturned = function() {
                            hidePreloader();
                        }

                    .include.preloader(ng-cloak, ng-include="'embeds/preloader.html'")
                    .include(ng-cloak, ng-include="'embeds/embed-' + game.source + '.html'")
                        #flashGame
                            a(href="http://get.adobe.com/flashplayer/", target="_blank")
                                img(src="./img/getFlash.png")
                .game-description(ng-bind-html="game.description")
            .right
                .header
                .right-ad-unit
                    img(src="./img/160x600.png", width="160", height="600", alt="Your ad here placeholder")
        .bottom
            .more-games-bottom
                .game(ng-repeat="game in moreGames")
                    a(ui-sref="game({gameID: game.id})")
                        img.game-thumbnail(ng-src="{{game.thumbnails[0].url}}")
                        .name(ng-bind="game.name")
